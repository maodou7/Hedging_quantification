# 基础环境配置
ENV=development  # 运行环境：development(开发环境)/production(生产环境)
DEBUG=true       # 是否开启调试模式
LOG_LEVEL=INFO   # 日志级别：DEBUG/INFO/WARNING/ERROR/CRITICAL

# Redis缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crypto_arbitrage
DB_USER=postgres
DB_PASSWORD=your_password_here

# InfluxDB时序数据库配置
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_token_here
INFLUXDB_ORG=crypto_arbitrage
INFLUXDB_BUCKET=market_data

# Bybit交易所API配置（实盘）
BYBIT_API_KEY=your_api_key_here
BYBIT_SECRET=your_secret_here

# Binance交易所API配置（实盘）
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET=your_secret_here

# OKX交易所API配置（实盘）
OKX_API_KEY=your_api_key_here
OKX_SECRET=your_secret_here
OKX_PASSWORD=your_password_here
OKX_FLAG=0  # 0表示实盘，1表示测试网

# 火币交易所API配置（实盘）
HUOBI_API_KEY=your_api_key_here
HUOBI_SECRET=your_secret_here

# Gate.io交易所API配置（实盘）
GATEIO_API_KEY=your_api_key_here
GATEIO_SECRET=your_secret_here

# 邮件通知配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com

# Telegram通知配置
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# 系统资源配置
MAX_THREADS=4        # 最大线程数
MAX_PROCESSES=2      # 最大进程数
CACHE_DIR=./cache   # 缓存目录
DATA_DIR=./data     # 数据存储目录
BACKUP_DIR=./backups # 备份目录
LOG_DIR=./logs      # 日志目录

# 系统配置
CACHE_MODE=redis  # redis or local
MONITOR_MODE=realtime  # realtime or ratelimited
DEVELOPMENT_MODE=true  # 开发模式，使用测试网络
MAX_RETRIES=3  # 最大重试次数
RETRY_DELAY=5  # 重试延迟（秒）
WEBSOCKET_TIMEOUT=30  # WebSocket超时时间（秒）
REST_TIMEOUT=10  # REST API超时时间（秒） 