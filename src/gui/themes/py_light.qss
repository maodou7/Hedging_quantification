/* /////////////////////////////////////////////////////////////////////////////////////////////////
主题样式表 - 明亮主题
///////////////////////////////////////////////////////////////////////////////////////////////// */

/* /////////////////////////////////////////////////////////////////////////////////////////////////
全局样式
///////////////////////////////////////////////////////////////////////////////////////////////// */
QWidget {
    color: rgb(50, 50, 50);
    font: 10pt "Segoe UI";
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
主窗口
///////////////////////////////////////////////////////////////////////////////////////////////// */
#centralwidget {
    background-color: rgb(240, 240, 240);
    padding: 0px;
    margin: 0px;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
标题栏
///////////////////////////////////////////////////////////////////////////////////////////////// */
#titleBar {
    background-color: rgb(230, 230, 230);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

#titleLabel {
    color: rgb(50, 50, 50);
    font: 12pt "Segoe UI";
    padding-left: 5px;
}

#settingsButton {
    background-color: transparent;
    border: none;
    border-radius: 5px;
    padding: 5px;
    font-size: 16px;
    font-family: "Segoe UI";
    color: rgb(50, 50, 50);
}

#settingsButton:hover {
    background-color: rgb(229, 243, 255);
}

#settingsButton:pressed {
    background-color: rgb(204, 228, 247);
}

#minButton {
    background-color: transparent;
    border: none;
    border-radius: 5px;
    padding: 5px;
    font-size: 16px;
    font-family: "Segoe UI";
    color: rgb(50, 50, 50);
}

#minButton:hover {
    background-color: rgb(229, 243, 255);
}

#minButton:pressed {
    background-color: rgb(204, 228, 247);
}

#maxButton {
    background-color: transparent;
    border: none;
    border-radius: 5px;
    padding: 5px;
    font-size: 16px;
    font-family: "Segoe UI";
    color: rgb(50, 50, 50);
}

#maxButton:hover {
    background-color: rgb(229, 243, 255);
}

#maxButton:pressed {
    background-color: rgb(204, 228, 247);
}

#closeButton {
    background-color: transparent;
    border: none;
    border-radius: 5px;
    padding: 5px;
    font-size: 16px;
    font-family: "Segoe UI";
    color: rgb(50, 50, 50);
}

#closeButton:hover {
    background-color: rgb(255, 80, 80);
    color: white;
}

#closeButton:pressed {
    background-color: rgb(230, 72, 72);
    color: white;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
标签页
///////////////////////////////////////////////////////////////////////////////////////////////// */
QTabWidget {
    background-color: transparent;
}

QTabWidget::pane {
    border: none;
    background-color: rgb(250, 250, 250);
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
}

QTabBar::tab {
    background-color: rgb(240, 240, 240);
    color: rgb(50, 50, 50);
    padding: 8px 20px;
    border: none;
}

QTabBar::tab:selected {
    background-color: rgb(250, 250, 250);
    border-bottom: 2px solid rgb(0, 120, 212);
}

QTabBar::tab:hover:!selected {
    background-color: rgb(245, 245, 245);
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
下拉框
///////////////////////////////////////////////////////////////////////////////////////////////// */
QComboBox {
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(200, 200, 200);
    border-radius: 5px;
    padding: 5px;
    min-width: 100px;
    color: rgb(50, 50, 50);
}

QComboBox:hover {
    border: 1px solid rgb(0, 120, 212);
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: url(src/gui/themes/icons/arrow-down-dark.png);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(200, 200, 200);
    border-radius: 5px;
    selection-background-color: rgb(229, 243, 255);
    selection-color: rgb(50, 50, 50);
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
表格
///////////////////////////////////////////////////////////////////////////////////////////////// */
QTableWidget {
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(200, 200, 200);
    gridline-color: rgb(230, 230, 230);
}

QTableWidget::item {
    border-color: rgb(230, 230, 230);
    padding-left: 5px;
    padding-right: 5px;
    gridline-color: rgb(230, 230, 230);
}

QTableWidget::item:selected {
    background-color: rgb(229, 243, 255);
    color: rgb(50, 50, 50);
}

QHeaderView::section {
    background-color: rgb(240, 240, 240);
    color: rgb(50, 50, 50);
    border: 1px solid rgb(200, 200, 200);
    padding: 5px;
}

QTableWidget::item:hover {
    background-color: rgb(245, 245, 245);
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
按钮
///////////////////////////////////////////////////////////////////////////////////////////////// */
QPushButton {
    background-color: rgb(0, 120, 212);
    border: none;
    border-radius: 5px;
    color: white;
    padding: 5px 15px;
}

QPushButton:hover {
    background-color: rgb(0, 102, 180);
}

QPushButton:pressed {
    background-color: rgb(0, 90, 158);
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
标签
///////////////////////////////////////////////////////////////////////////////////////////////// */
QLabel {
    color: rgb(50, 50, 50);
    background-color: transparent;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
工具提示
///////////////////////////////////////////////////////////////////////////////////////////////// */
QToolTip {
    background-color: rgb(255, 255, 255);
    color: rgb(50, 50, 50);
    border: 1px solid rgb(200, 200, 200);
    padding: 5px;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
设置对话框
///////////////////////////////////////////////////////////////////////////////////////////////// */
QDialog {
    background-color: rgb(250, 250, 250);
    border: 1px solid rgb(200, 200, 200);
    border-radius: 10px;
}

QDialog QLabel {
    color: rgb(50, 50, 50);
}

QDialog QLineEdit {
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(200, 200, 200);
    border-radius: 5px;
    padding: 5px;
    color: rgb(50, 50, 50);
}

QDialog QLineEdit:focus {
    border: 1px solid rgb(0, 120, 212);
}

QDialog QPushButton {
    background-color: rgb(0, 120, 212);
    border: none;
    border-radius: 5px;
    color: white;
    padding: 5px 15px;
    min-width: 80px;
}

QDialog QPushButton:hover {
    background-color: rgb(0, 102, 180);
}

QDialog QPushButton:pressed {
    background-color: rgb(0, 90, 158);
}

QDialog QComboBox {
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(200, 200, 200);
    border-radius: 5px;
    padding: 5px;
    min-width: 150px;
}

QDialog QComboBox:hover {
    border: 1px solid rgb(0, 120, 212);
}

QDialog QComboBox::drop-down {
    border: none;
    width: 20px;
}

QDialog QComboBox::down-arrow {
    image: url(src/gui/themes/icons/arrow-down-dark.png);
    width: 12px;
    height: 12px;
}

QDialog QComboBox QAbstractItemView {
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(200, 200, 200);
    border-radius: 5px;
    selection-background-color: rgb(229, 243, 255);
    selection-color: rgb(50, 50, 50);
} 